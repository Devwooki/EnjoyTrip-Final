<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.enjoytrip.model.user.mapper.UserMapper">

<!--    void insertUser(User user) throws SQLException;-->
    <insert id="insertUser" parameterType="user">
        insert into user(id, pw, name, email, email_domain)
        values (#{id}, #{pw}, #{name}, #{email}, #{emailDomain})
    </insert>

<!--    User selectLogin(User user) throws SQLException;-->
    <select id="selectLogin" parameterType="user" resultType="user">
        select * from user
        where id=#{id} and pw=#{pw}
    </select>

<!--    String selectIdCheck(String id) throws SQLException;-->
    <select id="selectIdCheck" parameterType="String" resultType="String">
        select id
        from user
        where id=#{id}
    </select>


<!--    void updateUser(User user) throws SQLException;-->
    <update id="updateUser" parameterType="user">
        update user
        set pw = #{pw}, name = #{name}, email = #{email}, email_domain = #{emailDomain}
        where id = #{id}
    </update >

<!--    void deleteUser(String userId) throws SQLException;-->
    <delete id="deleteUser" parameterType="String">
        delete from user
        where id = #{id}
    </delete>

<!--    void updateUserPw(User user) throws SQLException;-->
    <update id="updateUserPw" parameterType="user">
        update user
        set pw = #{pw}
        where id = #{id}
    </update>



    <!-- JWT Update -->
    <update id="saveRefreshToken" parameterType="map">
        update user
        set token = #{token}
        where id = #{userId}
    </update>

    <select id="getRefreshToken" parameterType="string" resultType="string">
        select token from user
        where id = #{userId}
    </select>

    <update id="deleteRefreshToken" parameterType="map">
        update user
        set token = #{token, jdbcType=VARCHAR}
        where id = #{userId}
    </update>
</mapper>